mixin diagramchart(options)
 svg(width="100%" height="100%" viewBox="0 0 42 42" class="diagramchart__donut")
   circle(class="diagramchart__donut-hole" cx="21" cy="21" r="15.91549430918954" fill="#fff")
   circle(class="diagramchart__donut-ring" cx="21" cy="21" r="15.91549430918954" fill="transparent" stroke="#FFE39C" stroke-width="4px")
   each val in options.segments ? options.segments : []      
    circle(class=val.class cx="21" cy="21" r="15.91549430918954" fill="transparent"
    stroke=val.stroke stroke-width="4px" stroke-dasharray=val.dasharray stroke-dashoffset=val.dashoffset)
   g(class="diagramchart__chart-text")
    text(x="50%" y="50%" class="diagramchart__chart-number")=options.number
    text(x="50%" y="50%" class="diagramchart__chart-label")=options.label