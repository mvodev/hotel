include ../../components/range-slider/range-slider.pug
include ../../components/button/button.pug
include ../../components/button-check/button-check.pug
include ../../components/button-radio/button-radio.pug
include ../../components/button-like/button-like.pug
include ../../components/button-rate/button-rate.pug
include ../../components/button-rich/button-rich.pug
