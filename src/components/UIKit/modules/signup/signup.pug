include ../button/button.pug
include ../textfield/textfield.pug
include ../toggle/toggle.pug
mixin signup(options)
 div(class='sign-up')
  div(class='sign-up__wrapper')
   form(action=options.action class="sign-up__form")
    h2(class="sign-up__header-reg")='Регистрация аккаунта'
    +textfield({isDefault:true,placeholder:'Имя'})
    +textfield({isDefault:true,placeholder:'Фамилия'})
    div(class='sign-up__radio-button-wrapper')
     +button({type:'radio',label:'Мужчина',isChecked:true})
     +button({type:'radio',label:'Женщина'})
    h3(class="sign-up__header-birthday")='Дата рождения'
    +textfield({isMasked:true,placeholder:'ДД.ММ.ГГГГ'})
    h3(class="sign-up__header-data")='Данные для входа в сервис'
    +textfield({isDefault:true,placeholder:'Email',type:"email"})
    +textfield({isDefault:true,placeholder:'Пароль',type:'password'})
    +toggle({labels:[{name:'Получать спецпредложения',  isPositive:false}]})
    +button({label:'ПЕРЕЙТИ К ОПЛАТЕ',type:'arrow',purpose:'submit'})
    div(class='sign-up__footer')
     span(class='sign-up__account')='Уже есть аккаунт на Toxin'
     +button({label:'Войти',type:'white',purpose:'submit'})
