include ../UIKit/modules/dropdown/dropdown.pug
include ../UIKit/modules/rangeSlider/rangeSlider.pug
include ../UIKit/modules/button/button.pug
include ../UIKit/modules/list/list.pug
include ../UIKit/modules/roomcard/roomcard.pug
include ../UIKit/modules/pagination/pagination.pug
html(lang="en")
 head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(name="description", content="отель поиск номеров")
  include ../Favicon/favicon.pug
  title Search page
 body.search-wrapper
  header.header
   include ../UIKit/modules/headers/standardNavBar.pug
  main.search-wrapper__content
   div.search-wrapper__content_left-column
    h1(class='left-column-header left-column-header_dates')='ДАТЫ ПРЕБЫВАНИЯ В ОТЕЛЕ'
    +dropdown({placeholder:'19 авг - 23 авг',typeDropdown:'filter'})
    h2(class='left-column-header left-column-header_guests')='ГОСТИ'
    +dropdown({placeholder:"3 гостя,1 младенец",typeDropdown:'guests',labels:[
    {text:"взрослые",counterNumber:3},
    {text:"дети",counterNumber:0},
    {text:"младенцы",counterNumber:1},
    ],withButtons:true})
    +rangeSlider({label:'ДИАПАЗОН ЦЕНЫ'})
    h3(class='left-column-header left-column-header_price')='Стоимость за сутки пребывания в номере'
    h2(class='left-column-header left-column-header_rules')='ПРАВИЛА ДОМА'
    +button({type:'check',labels:[{text:'Можно курить',isChecked:false},{text:'Можно с питомцами',isChecked:true},{text:'Можно пригласить гостей(до 10 человек)',isChecked:false}]})
    h2(class='left-column-header left-column-header_availability')='доступность'
    div.button-rich_first
      +button({type:'rich',header:'Широкий коридор',label:'Ширина коридоров в номере не менее 91 см.'})
    div.button-rich_last
      +button({type:'rich',header:'Помощник для инвалидов',label:'На 1 этаже вас встретит специалист  и проводит до номера.'})
    h2(class='left-column-header left-column-header_comfort')='удобства номера'
    +dropdown({typeDropdown:'room',placeholder:'2 спальни,2 кровати', labels:[
    {text:"спальни",counterNumber:2},
    {text:"кровати",counterNumber:2},
    {text:"ванныe комнаты",counterNumber:0},
    ]})
    +list({type:'expandable',label:'дополнительные удобства',isExpand:false,
    labels:[{text:'Завтрак',isChecked:false},
    {text:'Письменный стол',isChecked:true},{text:'Стул для кормления',isChecked:true},{text:'Кроватка',isChecked:true},{text:'Телевизор',isChecked:false},{text:'Шампунь',isChecked:false}]})
   div.search-wrapper__content_right-column
    h1(class='right-column-header right-column-header_main')='Номера, которые мы для вас подобрали'
    div.rooms
      +roomcard({imgSource:'room1.png',roomNumber:888,price:'9 990₽',rate:5,roomType:'люкс',commentNumber:145})
      +roomcard({imgSource:'room2.png',roomNumber:840,price:'9 990₽',rate:4,commentNumber:65})
      +roomcard({imgSource:'room3.png',roomNumber:980,price:'8 500₽',rate:3,roomType:'люкс',commentNumber:35})
      +roomcard({imgSource:'room4.png',roomNumber:856,price:'7 300₽',rate:5,commentNumber:19})
      +roomcard({imgSource:'room5.png',roomNumber:740,price:'6 000₽',rate:4,commentNumber:44})
      +roomcard({imgSource:'room6.png',roomNumber:982,price:'5 800₽',rate:3,commentNumber:56})
      +roomcard({imgSource:'room7.png',roomNumber:678,price:'5 500₽',rate:4,commentNumber:44})
      +roomcard({imgSource:'room8.png',roomNumber:450,price:'5 300₽',rate:4,commentNumber:39})
      +roomcard({imgSource:'room9.png',roomNumber:350,price:'5 000₽',rate:3,commentNumber:77})
      +roomcard({imgSource:'room10.png',roomNumber:666,price:'5 000₽',rate:3,commentNumber:15})
      +roomcard({imgSource:'room11.png',roomNumber:444,price:'5 000₽',rate:3,commentNumber:15})
      +roomcard({imgSource:'room12.png',roomNumber:352,price:'5 000₽',rate:3,commentNumber:55})
    +pagination({isEllipsis:true,firstNumbers:[1,2,3],lastNumber:15,selectedPage:1,label:'1 – 12 из 100+ вариантов аренды'})
  footer.footer
   include ../UIKit/modules/footers/footerWidget.pug
   include ../UIKit/modules/footers/footerCopyrightBar.pug
